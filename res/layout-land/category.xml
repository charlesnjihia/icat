<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6" >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal" >
    
        <ImageView
        android:id="@+id/cat_image"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:src="@drawable/sample6" />
        <View 
         android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_height="match_parent"
        
        />
    
        
        </LinearLayout>
    
    
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal" >

  <!--   <ImageView
        android:id="@+id/cat_image"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher" 
        />-->
    <View 
         android:layout_width="0dp"
        android:layout_weight="3"
        
        android:layout_height="match_parent"
        
        />
      <RelativeLayout 
          android:layout_width="0dp"
        android:layout_weight="2"
        android:background="#E6E6E6"
        android:layout_height="match_parent">
    
    <LinearLayout
         android:layout_width="match_parent"      
        android:background="@drawable/cat_bg"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
         android:orientation="vertical" >
      <TextView 
          android:id="@+id/cat_name"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3"
          android:textColor="#F35C11"
          android:textStyle="normal"
          android:fontFamily="sans-serif-thin" 
          android:text="Category Name"
          android:textSize="40sp"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:gravity="center"/> 
          
      <View
          android:layout_width="150dp"
          android:layout_height="2dp"
          android:layout_marginRight="10dp"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:background="@drawable/sep_bg" />
      <View 
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"/>
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="2"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
             
              android:orientation="horizontal">  
              
             <ImageView
        android:id="@+id/prods"
        android:layout_width="0dp"
        android:layout_weight="1"
       
        android:layout_height="30dp"
        android:src="@drawable/trac2" /> 
               <ImageView
        android:id="@+id/cats"
        android:layout_width="0dp"
        android:layout_weight="1"
         
        android:layout_height="30dp"
        android:src="@drawable/cat3" /> 
               <ImageView
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_weight="1"
        
        android:layout_height="30dp"
        android:src="@drawable/home2" /> 
               <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_weight="1"
        
        android:layout_height="30dp"
        android:src="@drawable/up" /> 
              
              
              
          </LinearLayout> 
          <View 
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
             />
          
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="2"
              android:gravity="center">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              
              android:orientation="horizontal"
              >
               <View 
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="2"
             />
               <LinearLayout
                   android:id="@+id/tosubs"
                   android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="2"
              android:clickable="true"
              android:background="@drawable/cat_viewbg"
              android:orientation="horizontal">
               <ImageView
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/cat2" /> 
        
                <TextView
        android:id="@+id/go"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="left|center_vertical"
        android:layout_height="match_parent"
        android:text="View" /> 
              
          </LinearLayout>    
              
          </LinearLayout>
          </RelativeLayout>
          <View 
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              />
        
        
    </LinearLayout>
    
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>
