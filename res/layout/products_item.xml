            android:layout_weight="1" >
        <TextView
             android:id="@+id/prodprice"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            
            android:gravity="center"
            android:text="Ksh 1500"
            android:textColor="#939393" />
